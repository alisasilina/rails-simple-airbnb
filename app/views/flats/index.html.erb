<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Simple Airbnb</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
      </li>

    </ul>
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn btn-outline-secondary my-2 my-sm-0" type="submit">Search</button>
    </form>
    <a class="btn btn-outline-primary my-2 my-sm-0 ml-2" href="/flats/new">Add Flat</a>
  </div>
</nav>

<div class="container mt-3">
  <div class="row align-items-center flex-column">
    <h1>All our Flats</h1>
    <p>We have <%= @flats.count %> flats for you</p>
  </div>
  <div class="row justify-content-center">
    <% @flats.each do |flat| %>
    <div class="col-4">
      <div class="flat_card">
        <div class="flat_card_img"></div>
        <div class="flat_card_content">
          <h4><%= flat.name %></h4>
          <p><%= flat.description.truncate(90) %></p>
        </div>
        <div class='icons-content'>
          <div class="d-flex mr-3 align-items-center">
            <i class="fas fa-user-friends"></i>
            <p class='mb-0'><%= flat.number_of_guests %></p>
          </div>
          <div class="d-flex align-items-center">
            <i class="fas fa-euro-sign"></i>
            <p class='mb-0'><%= flat.price_per_night %></p>
          </div>
        </div>
        <div class="flat_card_actions">
          <%= link_to 'More info', flat_path(flat) %>
          <%= link_to 'Edit', edit_flat_path(flat), class: 'text-info' %>
          <%= link_to 'Remove', flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }, class: 'text-danger' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
